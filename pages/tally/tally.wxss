.c-state1{
  transform: rotate(0deg) scale(1) translate(45%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(45%,0%); 
  border-left: 1rpx solid #b5b5b5;
}
.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: #fff;
  z-index: 0;
}

.search-item .picker {
    border: 1rpx solid lightgray;
    padding:22rpx 10rpx;
    margin:10rpx;
    font-size: 26rpx;
    color: #8a8989;
    width:40%;
}

.page-bottom .closeBtn {
  text-align:right;
  width:44%;
  margin-top:10rpx;
  margin-bottom: 20rpx;
}

.page-bottom .closeBtn image {
  width: 40rpx;
  height: 40rpx;
}

.search-item .searchBtn {
    border-radius: 0rpx;
    background-color: #a61212;
    color: #fff;
    margin: auto 10rpx;
    width: 43%;
}

.searchCls {
  margin:0rpx auto;
  background-color: #fff;
}
.searchCls .searchPickerCls {
  display: flex;
  width: 100%;
}

.tally-top-main {
    background-color: #4f758d;
    padding:20rpx;
    color: #fff;
}

.tally-top-main .top-search {
  font-size:26rpx;
  padding-left:20rpx;
  width: 100rpx;
}

.top-search text {
  vertical-align: middle;
}

.top-search image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.tally-top-main .top-info-center{
    text-align: center;
    margin-top: 40rpx;
}

.tally-top-main .top-info-center text  {
  display: block;
}

.tally-top-main .top-info-center .top-info-center-amount {
  font-size: 50rpx;
  margin-bottom: 20rpx;
}

.tally-top-main .top-info-left, .tally-top-main .top-info-right {
  display: inline-block;
  width: 49%;
  font-size: 26rpx;
  margin-top: 48rpx;
}

.tally-top-main .top-info-left text {
  display: block;
}

.tally-top-main .top-info-right text {
  display: block;
}

.tally-top-main .top-info-left {
  border-right: 2rpx solid #fff;
  text-align: center;
}

.tally-top-main .top-info-right {
  text-align: center;
}

.tally-top-main .top-info-center .top-info-center-text {
  font-size: 26rpx;
}

.item-top {
  padding:10rpx 50rpx;
  font-size:26rpx;
  background:#eaeaea;
}

.tallyItems {
  margin-bottom:2rpx;
  border-bottom:1rpx solid #d8d8d8;
}

.item-top .item-right, .item-tally .item-right {
  float: right;
}

.item-tally {
  padding:30rpx 50rpx;
  font-size:30rpx;
}

.item-tally image {
  width:44rpx;
  height:44rpx;
  border-radius:50%;
  margin-right:8rpx;
  vertical-align: middle;
}

.item-tally text{
  vertical-align: middle;
}
