
.main-item {
    padding: 10rpx 0rpx;
}

.main-item .input {
    border: 1rpx solid lightgray;
    padding:10rpx;
    margin:0rpx 10rpx;
    font-size: 26rpx;
}

.main-item .picker {
    border: 1rpx solid lightgray;
    padding:22rpx 10rpx;
    margin:0rpx 10rpx;
    font-size: 26rpx;
    color: #8a8989;
}

.main-item .textarea {
    border: 1rpx solid lightgray;
    padding:10rpx;
    margin:0rpx 10rpx;
    font-size: 26rpx;
    height: 100px;
}

.main-item .saveBtn {
    border-radius: 0rpx;
    background-color: #a61212;
    color: #fff;
    margin: auto 10rpx;
}

.error {
  border-color: red !important;
  color: red !important;
}